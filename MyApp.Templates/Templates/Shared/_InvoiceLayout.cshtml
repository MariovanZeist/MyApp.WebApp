<!head><style>
html 						                    { margin:0; padding:0; }
body 						                    { margin:0; padding:20px; font-family:verdana, sans-serif; font-size:12px; }

/* factuur */
div#paper 					                    { position:relative; /*width:1000px; height:1000px;*/ padding:0; margin:0;}
div#logo 					                    { position:absolute; top:0; left:40px; height:240px; width:400px; }
div#logo img                                    { max-width:100%; max-height:100%; }

div#bedrijfsgegevens 				            { position:absolute; top:0; left:580px; width:480px; min-height:100px; max-height:280px;height:280px; overflow:hidden; }
div#bedrijfsgegevens p                          { font-family: verdana, sans-serif;font-size: 16px; }
div#bedrijfsgegevens p.adres                    { display: block; }
div#bedrijfsgegevens p#bedrijfsnaam             { font-family: verdana, sans-serif;font-size: 17px;margin-bottom:20px; }
div#bedrijfsgegevens table,
div#bedrijfsgegevens tr,
div#bedrijfsgegevens td,
div#bedrijfsgegevens p					        { margin: 0px; padding: 0px; }
div#bedrijfsgegevens table                      { margin-top:20px; }
div#bedrijfsgegevens p                          { line-height:150%; }

table#klant-adres				                { position:absolute; top:350px; left:580px; width:440px; }
table#klant-adres tr				            {}
table#klant-adres tr td							{ padding-top:4px; padding-bottom:4px; }

/* standaard opmaak */
table                      			            { width:100%; border-collapse:collapse; }
table td,
table th						                { text-align:left; vertical-align:top; padding:8px 0; }
table th+th,
table td+td                                     { padding-left:10px; }
table tr td[id*='label-'] 			            { font-weight:bold; }
table tr td[id*="veld-"] 			            {}

.textalign-right                                { text-align:right; }
.textalign-center                               { text-align:center; }

/* factuurgegevens tabel */
table#invoice				                    { position: absolute; top: 315px; left:0; width: 380px;}
table#invoice tr				                {}
table#invoice tr td,
table#invoice tr th				                { padding-top:4px; padding-bottom:4px; }
table#invoice tr td#invoicenr      		        { font-weight:bold; font-size:120%; }
table#invoice tr th								{ padding-bottom:16px; }

/* rows tabel */
div#rowswrap                                    { position: absolute; top: 510px; left:0; width:100%; }
/*div#footer                                      { margin-top:20px; }*/
table#rows 				                        {  border:1px solid #333333;}
table#rows thead 				                {}
table#rows thead tr 			                {  }
table#rows thead tr th 			                { font-weight:bold;  font-size:100%;padding-bottom:20px; }

table#rows tbody 				                {}
table#rows tbody tr 			                {}
table#rows tbody tr td 			                {}

table#rows tbody#invoicerow 		            {}
table#rows tbody#invoicerow tr 		            {}
table#rows tbody#invoicerow tr td 	            {  }
table#rows tbody#invoicerow tr:first-child td   { border-top:none; }

table#rows tbody#subtotal 		                { }
table#rows tbody#subtotal tr 		            {}
table#rows tbody#subtotal tr td 		        { }

table#rows tbody#subtotal tr:first-child td                 { padding-top: 60px; }

table#rows tbody#vatpct 		                {}
table#rows tbody#vatpct tr 		                {}
table#rows tbody#vatpct tr td 	                {}
table#rows tbody#vatpct tr td[id*='label-']     { font-weight:normal; }

table#rows tbody#total			                {}
table#rows tbody#total tr 		                {}
table#rows tbody#total tr td 		            {}
table#rows tbody#total tr td[id*='label-'],
table#rows tbody#total tr td[id*='veld-'] 	    { border-top:1px solid #333333; font-size:120%; }

table#rows tr th								{ padding:4px 10px 4px 10px;  }
table#rows tr td								{ padding:0px 10px 4px 10px;  }

#vatwrap                                        { width:400px; margin-top:40px; }
table#vat                                       {  border:1px solid #333333; }
table#vat thead                                 {}
table#vat thead tr                              {}
table#vat thead tr th                           { font-weight: bold;font-size: 100%;}
table#vat tfoot tr td                           { font-weight: bold;font-size: 100%;border-top:1px solid #333333;}
table#vat                                       { left: 0px;}
table#vat tr                                    { }

table#vat tr td#vat                             { font-weight: bold;font-size: 120%;}

table#vat tr th									{ padding:4px 10px 4px 10px;  }
table#vat tr td									{ padding:0px 10px 4px 10px;  }
table#vat tfoot tr td							{ padding-top:4px;}

/* factuur voettekst */
div#footer                                      { margin-top: 80px;margin-bottom:40px; left: 20px;max-height: 50px;width: 100%;font-size: 16px; text-align:center;font-weight:bold;}

    #qrCodeContainer div {
        font-size: 14px;
        text-align: left;
    }
    #qrCodeContainer img {
        width: 200px;
        height: 200px;
    }

